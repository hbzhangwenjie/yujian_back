<view class="index">
   <view class="interval"></view>
   <form bindsubmit="getGender">
      <view class="index-bd">
         <view class="kind-list">
            <view class="kind-list-item">
               <view class="kind-list-item-hd inter" bindtap="choose">
                  <view name="sex" class="kind-list-text">男</view>
                  <image hidden="{{hidden}}" class="kind-list-img" src="../../images/checked.png"></image>
               </view>
               <view class="kind-list-item-hd" bindtap="chooseGender">
                  <view name="sex" class="kind-list-text">女</view>
                  <image hidden="{{hide}}" class="kind-list-img" src="../../images/checked.png"></image>
               </view>
            </view>
         </view>
      </view>
      <view class="interval"></view>
      <button class="btn" form-type="submit">确定</button>
   </form>
</view>